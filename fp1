
import 'package:flutter/material.dart';
import 'package:flutter/widgets.dart';
void main(){
 runApp(MaterialApp(
   home: Scaffold(
       appBar: AppBar(title: Text('flutter app'),),
       body: Center(
         child:Text(
           'with safe area',
           textAlign: TextAlign.center,
           style: TextStyle(
             fontSize: 40,
             fontWeight: FontWeight.w900,
             color: Colors.redAccent,
           ),
         ),
       )
   )
 )
 );
}



